<section class="hero">
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-headline">
        Never Miss<br />
        <span class="text-gradient">Another Customer.</span>
      </h1>
      <p class="hero-subheadline">
        Still picking up calls one by one? Writing reservations in a diary?<br />
        There's a better way.
      </p>
      <div class="hero-ctas">
        <a href="#contact" class="btn btn-primary btn-lg">
          Book Free Demo
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
      <p class="hero-note">Live 24/7. Even when you're closed.</p>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    padding: 12rem 0 6rem;
    min-height: 80vh;
    display: flex;
    align-items: center;
    background: linear-gradient(180deg, var(--color-bg-alt) 0%, var(--color-bg) 100%);
  }

  .hero-content {
    max-width: 700px;
    text-align: center;
    margin: 0 auto;
  }

  .hero-headline {
    margin-bottom: var(--space-lg);
    line-height: 1.1;
    font-size: clamp(2.5rem, 7vw, 4.5rem);
  }

  .hero-subheadline {
    font-size: 1.25rem;
    color: var(--color-text-light);
    margin-bottom: var(--space-xl);
    line-height: 1.6;
  }

  .hero-ctas {
    display: flex;
    justify-content: center;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .hero-note {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  @media (min-width: 768px) {
    .hero-subheadline {
      font-size: 1.375rem;
    }
  }
</style>
