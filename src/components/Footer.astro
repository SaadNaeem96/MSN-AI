---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <a href="/" class="logo">
          <svg class="logo-icon" width="28" height="28" viewBox="0 0 100 100">
            <defs>
              <linearGradient id="compassGradFooter" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#10b981"/>
                <stop offset="50%" style="stop-color:#14b8a6"/>
                <stop offset="100%" style="stop-color:#f59e0b"/>
              </linearGradient>
            </defs>
            <polygon points="50,5 55,40 50,50 45,40" fill="url(#compassGradFooter)"/>
            <polygon points="50,95 55,60 50,50 45,60" fill="url(#compassGradFooter)" opacity="0.7"/>
            <polygon points="5,50 40,45 50,50 40,55" fill="url(#compassGradFooter)" opacity="0.7"/>
            <polygon points="95,50 60,45 50,50 60,55" fill="url(#compassGradFooter)"/>
            <polygon points="18,18 43,43 50,50" fill="url(#compassGradFooter)" opacity="0.4"/>
            <polygon points="82,18 57,43 50,50" fill="url(#compassGradFooter)" opacity="0.4"/>
            <polygon points="18,82 43,57 50,50" fill="url(#compassGradFooter)" opacity="0.4"/>
            <polygon points="82,82 57,57 50,50" fill="url(#compassGradFooter)" opacity="0.4"/>
            <circle cx="50" cy="50" r="8" fill="white" opacity="0.9"/>
          </svg>
          <span class="logo-text">MSNAI</span>
        </a>
        <p>Never miss another customer.</p>
      </div>

      <div class="footer-links">
        <a href="#how-it-works">How It Works</a>
        <a href="#services">Services</a>
        <a href="#contact">Contact</a>
      </div>

      <div class="footer-contact">
        <a href="mailto:msnai.host@gmail.com">msnai.host@gmail.com</a>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} MSN AI. Toronto, Canada.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-bg-dark);
    color: rgba(255, 255, 255, 0.7);
    padding: var(--space-3xl) 0 var(--space-xl);
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-2xl);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .logo {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 700;
    text-decoration: none;
  }

  .logo-text {
    background: linear-gradient(135deg, #10b981 0%, #14b8a6 50%, #f59e0b 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .footer-brand p {
    margin: 0;
    font-size: 0.9375rem;
  }

  .footer-links {
    display: flex;
    gap: var(--space-lg);
  }

  .footer-links a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color var(--transition-fast);
  }

  .footer-links a:hover {
    color: white;
  }

  .footer-contact a {
    color: #10b981;
    text-decoration: none;
    font-size: 0.9375rem;
  }

  .footer-contact a:hover {
    color: #f59e0b;
  }

  .footer-bottom p {
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.5);
    margin: 0;
  }

  @media (min-width: 768px) {
    .footer-content {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
  }
</style>
